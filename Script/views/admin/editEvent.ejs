<!-- partial:partials/header -->
<%- include('../layouts/header.ejs') %>

<!--begin::App-->
<div class="d-flex flex-column flex-root app-root" id="kt_app_root">

  <!--begin::Page-->
  <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
    <!--begin::navbar-->
    <div id="kt_app_header" class="app-header d-flex flex-column flex-stack">
      <!--begin::navbar main-->
      <%- include('../layouts/navbar.ejs') %>
      <!--end::navbar main-->
      <!--begin::Separator-->
      <div class="app-header-separator"></div>
      <!--end::Separator-->
    </div>
    <!--end::navbar-->

    <!--begin::Wrapper-->
    <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
      <!--begin::Sidebar-->
      <div id="kt_app_sidebar" class="app-sidebar flex-column" data-kt-drawer="true" data-kt-drawer-name="app-sidebar" data-kt-drawer-activate="{default: true, lg: false}" data-kt-drawer-overlay="true" data-kt-drawer-width="250px" data-kt-drawer-direction="start" data-kt-drawer-toggle="#kt_app_sidebar_mobile_toggle">
        <!--begin::Main sidebar-->
        <%- include('../layouts/sidebar.ejs') %>
        <!--end::Main sidebar-->
      </div>
      <!--end::Sidebar-->

      <!--begin::Main-->
      <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <!--begin::Content wrapper-->
        <div class="d-flex flex-column flex-column-fluid">
          <!--begin::Toolbar-->
          <div id="kt_app_toolbar" class="app-toolbar pt-5">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
              <!--begin::Toolbar wrapper-->
              <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                  <!--begin::Breadcrumb-->
                  <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                      <a class="text-gray-500">
                        <i class="ki-solid ki-notepad-edit fs-1 text-gray-700 mx-n1"></i>
                      </a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Event</li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                        <a href="<%= process.env.BASE_URL %>event" class="text-hover-primary fw-bold text-gray-700">View All Event</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                        <a href="<%= process.env.BASE_URL %>event-details?id=<%= event._id %>" class="text-hover-primary fw-bold text-gray-700">Event Details</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold">Edit Event</li>
                    <!--end::Item-->
                  </ul>
                  <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
              </div>
              <!--end::Toolbar wrapper-->
            </div>
            <!--end::Toolbar container-->
          </div>
          <!--end::Toolbar-->

          <!--begin::Content-->
          <div id="kt_app_content" class="app-content flex-column-fluid pt-0">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container container-fluid">

              <!--begin::Row-->
              <div class="row g-5 d-flex justify-content-center">
                <div class="card mb-5 mb-xl-10">
                  <!--begin::Card header-->
                  <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
                    <!--begin::Card title-->
                    <div class="card-title m-0">
                      <h3 class="fw-bold m-0 fs-1">Edit Event</h3>
                    </div>
                    <!--end::Card title-->
                  </div>
                  <!--begin::Card header-->
                  <!--begin::Content-->
                  <div id="kt_account_settings_profile_details" class="collapse show">

                    <!--begin::Form-->
                    <form class="form" method="post" enctype="multipart/form-data">
                      <!--begin::Card body-->
                      <div class="card-body border-top p-9">

                        <!-- flash message -->
                        <% if(flash.error.length> 0){ %>
                        <!--begin::Alert-->
                        <div class="alert alert-dismissible bg-light-danger d-flex align-items-center mb-10">
                          <!--begin::Content-->
                          <span class="fs-4 text-danger fw-bold text-center ps-5"><%= flash.error %></span>
                          <!--end::Content-->
                          <!--begin::Close-->
                          <button type="button" class="btn btn-icon ms-sm-auto" data-bs-dismiss="alert">
                            <i class="ki-duotone ki-cross fs-1 text-danger fw-bold"><span class="path1"></span><span class="path2"></span></i>
                          </button>
                          <!--end::Close-->
                        </div>
                        <!--end::Alert-->
                        <% } %>
                        <!-- complete flash message -->

                         <!--begin::Input group-->
                         <input type="hidden" name="id" value="<%= event._id  %>">
                        <!--end::Input group-->

                         <!--begin::Input group-->
                         <input type="hidden" name="oldImage" value="<%= event.avatar %>">
                        <!--end::Input group-->

                         <!--begin::Input group-->
                      <div class="row mb-10">
                        <!--begin::Label-->
                        <label class="col-form-label required fw-semibold fs-6">Image</label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="fv-row fv-plugins-icon-container">
                          <!--begin::Image input-->
                          <div class="image-input image-input-outline image-input-placeholder" data-kt-image-input="true">
                            <!--begin::Preview existing avatar-->
                            <img class="galleryimg image-input-wrapper w-150px h-150px" src="<%= IMAGE_URL + event.avatar %>" alt="<%= event.avatar %>" id="previewImage"></img>
                            <!--end::Preview existing avatar-->
                            <!--begin::Edit button-->
                            <label class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-30px h-30px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" data-bs-dismiss="click" title="Change Image">
                              <i class="ki-duotone ki-pencil fs-2 text-primary">
                                <span class="path1"></span>
                                <span class="path2"></span>
                              </i>
                              <!--begin::Inputs-->
                              <input type="file" name="image" id="imageInput" accept=".png, .jpg, .jpeg"  />
                              <!--end::Inputs-->
                            </label>
                            <!--end::Edit button-->
                          </div>
                          <!--end::Image input-->
                          <!--begin::Hint-->
                          <div class="form-text">Allowed file types: png, jpg, jpeg.</div>
                          <!--end::Hint-->
                        </div>
                        <!-- end::Col -->
                      </div>
                      <!--end::Input group-->

                        <!--begin::Input group-->
                        <div class="row mb-10">
                          <div class="col-sm-6">
                            <label class="form-label required">Name</label>
                            <input type="text" class="form-control form-control-lg" name="name" value="<%= event.event %>" placeholder="Enter event Name" required />
                          </div>
                          <div class="col-sm-6">
                            <label class="form-label required">Category</label>
                            <select name="categoryId" class="form-select form-select-lg" data-control="select2"  data-placeholder="Select Category">
                                <option></option>
                                <% category.forEach((item) => { %>
                                <option value="<%= item._id %>" <% if(String(item._id) === String(event.categoryId)) { %> selected <%} %>> <%= item.category %> </option>
                                <% }) %>
                            </select>
                          </div>
                        </div>
                        <!--end::Input group-->

                         <!--begin::Input group-->
                         <div class="row mb-10">
                          <div class="col-sm-6">
                            <label class="form-label required">Organizer</label>
                            <select name="organizerId" class="form-select" data-control="select2" data-close-on-select="false"  data-placeholder="Select Organizer" data-allow-clear="true" multiple="multiple">
                                <% organizer.forEach((item) => { %>
                                    <% if (event.organizerId && event.organizerId.some(fac => String(fac._id) === String(item._id))) { %>
                                    <option value="<%= item._id %>" selected><%= item.organizer %></option>
                                    <% } else { %>
                                    <option value="<%= item._id %>"><%= item.organizer %></option>
                                    <% } %>
                                <% }) %>
                            </select>
                          </div>
                          <div class="col-sm-6">
                            <label class="form-label required">Sponsor</label>
                            <select name="sponsorId" class="form-select" data-control="select2" data-close-on-select="false" data-placeholder="Select Sponsor" data-allow-clear="true" multiple="multiple">
                                <% sponsor.forEach((item) => { %>
                                    <% if (event.sponsorId && event.sponsorId.some(fac => String(fac._id) === String(item._id))) { %>
                                    <option value="<%= item._id %>" selected><%= item.sponsor %></option>
                                    <% } else { %>
                                    <option value="<%= item._id %>"><%= item.sponsor %></option>
                                    <% } %>
                                <% }) %>
                            </select>
                          </div>
                        </div>
                        <!--end::Input group-->

                        <!--begin::Input group-->
                        <div class="row mb-10">
                            <div class="col-sm-6">
                              <label class="form-label required">Date</label>
                              <input class="form-control form-control-lg" name="date" value="<%= event.date %>" placeholder="Select a date" id="kt_datepicker_1" required />
                            </div>                          
                            <div class="col-sm-6">
                              <label class="form-label required">Time</label>
                              <input class="form-control form-control-lg" name="time" value="<%= event.time %>" placeholder="Select a time" id="kt_datepicker_3" required />
                            </div> 
                        </div>
                        <!--end::Input group-->
  
                        <!--begin::Input group-->
                        <div class="row mb-10">
                            <div class="col-sm-6">
                                <label class="form-label required">Booking Last Date</label>
                                <input class="form-control form-control-lg" name="lastdate" value="<%= event.lastdate %>" placeholder="Select the last booking date" id="kt_datepicker_2" required />
                              </div>                                                      
                            <div class="col-sm-6">
                              <label class="form-label required">Price (Per Seat)</label>
                              <input type="number" class="form-control form-control-lg" name="price" value="<%= event.price %>" placeholder="Enter price" step="0.0001" required />
                            </div> 
                        </div>
                        <!--end::Input group-->

                         <!--begin::Input group-->
                         <div class="row mb-10">
                            <div class="col-sm-6">
                                <label class="form-label required">Total Seat</label>
                                <!-- total old seat -->
                                <input type="hidden" name="totalOldSeat" value="<%= event.totalSeat %>">
                                <!-- total booked ticket -->
                                <input type="hidden" name="totalBookedTicket" value="<%= event.totalBookedTicket %>">
                                <input type="number" class="form-control form-control-lg" name="totalSeat" value="<%= event.totalSeat %>" placeholder="Enter total seat" required />
                            </div>                                                    
                            <div class="col-sm-6">
                              <label class="form-label required">Tax (in percentage)</label>
                              <input type="number" class="form-control form-control-lg" name="tax" value="<%= event.tax %>" placeholder="Enter tax" step="0.0001" required />
                            </div> 
                        </div>
                        <!--end::Input group-->

                         <!--begin::Input group-->
                         <div class="row mb-10">
                            <div class="col-sm-12">
                                <label class="form-label required">Address</label>
                                <input type="text" class="form-control form-control-lg" name="address" value="<%= event.address %>" placeholder="Enter address" required />
                            </div>                                                    
                        </div>
                        <!--end::Input group-->

                        <!--begin::Input group-->
                         <div class="row mb-10">
                             <div class="col-sm-6">
                                 <label class="form-label required">Latitude</label>
                                 <input type="text" class="form-control form-control-lg" name="latitude" value="<%= event.location.latitude %>" placeholder="Enter latitude" required />
                             </div>                                                    
                         
                             <div class="col-sm-6">
                                 <label class="form-label required">Longitude</label>
                                 <input type="text" class="form-control form-control-lg" name="longitude" value="<%= event.location.longitude %>" placeholder="Enter longitude" step="0.0001" required />
                             </div> 
                         </div>
                         <!--end::Input group-->

                          <!--begin::Input group-->
                        <div class="row mb-10">
                          <div class="col-sm-6">
                            <label class="form-label">Photo Link</label>
                            <input type="text" class="form-control form-control-lg" name="photo_link" placeholder="Enter photi link" value="<%= event.photo_link %>" required />
                          </div>   
                          <div class="col-sm-6">
                            <label class="form-label">Tag</label>
                            <select name="tagId" class="form-select form-select-lg" data-control="select2" data-close-on-select="false" data-placeholder="Select Tag" data-allow-clear="true" data-hide-search="false" multiple="multiple">
                              <option></option>
                              <% tag.forEach((item) => { %>
                              <% if (event.tagId && event.tagId.some(fac => String(fac._id) === String(item._id))) { %>
                              <option value="<%= item._id %>" selected><%= item.name %></option>
                              <% } else { %>
                              <option value="<%= item._id %>"><%= item.name %></option>
                              <% } %>
                              <% }) %>
                            </select>
                          </div>
                        </div>
                        <!--end::Input group-->

                        <!--begin::Input group-->
                        <div class="row mb-10">
                          <div class="col-sm-12">
                            <label class="form-label required">Brief Description</label>
                            <textarea name="briefdescription" class="form-control" data-kt-autosize="true" rows="5" placeholder="Provide a brief description"><%- event.briefdescription %></textarea>
                          </div>
                        </div>
                        <!--end::Input group-->

                         <!--begin::Input group-->
                         <div class="row mb-10">
                            <div class="col-sm-12">
                                <label class="form-label required">Disclaimer</label>
                                <textarea name="disclaimer" id="kt_docs_first_ckeditor_classic" placeholder="Enter disclaimer text here"><%- event.disclaimer %></textarea>
                            </div>
                        </div>
                        <!--end::Input group-->
                        
                        <!--begin::Input group-->
                        <div class="row">
                            <div class="col-sm-12">
                                <label class="form-label required">Description</label>
                                <textarea name="description" id="kt_docs_second_ckeditor_classic" placeholder="Enter description text here"><%- event.description %></textarea>
                            </div>
                        </div>
                        <!--end::Input group-->
                        

                      </div>
                      <!--end::Card body-->

                      <!--begin::Actions-->
                      <div class="card-footer d-flex justify-content-start py-6 px-9">
                        <button type="submit" class="btn btn-primary me-5">Edit</button>
                      </div>
                      <!--end::Actions-->

                    </form>
                    <!--end::Form-->
                  </div>
                  <!--end::Content-->
                </div>
              </div>
              <!--end::Row-->
            </div>
            <!--end::Content container-->
          </div>
          <!--end::Content -->

          <!--begin::Footer-->
          <div id="kt_app_footer" class="app-footer align-items-center justify-content-center justify-content-md-between flex-column flex-md-row py-3">
            <!--begin::Copyright-->
            <div class="text-dark order-2 order-md-1">
              <span class="text-muted fw-semibold me-1"></span>
              <a  target="_blank" class="text-gray-800 text-hover-primary"></a>
            </div>
            <!--end::Copyright-->
          </div>
          <!--end::Footer-->
        </div>
        <!--end::Content wrapper-->

      </div>
      <!--end::Main-->
    </div>
    <!--end:Wrapper-->
  </div>
  <!--end::Page-->
</div>
<!--end::App-->

<!--begin::Scrolltop-->
<div id="kt_scrolltop" class="scrolltop" data-kt-scrolltop="true">
  <i class="ki-duotone ki-arrow-up">
    <span class="path1"></span>
    <span class="path2"></span>
  </i>
</div>
<!--end::Scrolltop-->


<!-- partial:partials/header -->
<%- include('../layouts/footer.ejs') %>