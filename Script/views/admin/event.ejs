<!-- partial:partials/header -->
<%- include('../layouts/header.ejs') %>

<!--begin::App-->
<div class="d-flex flex-column flex-root app-root" id="kt_app_root">

  <!--begin::Page-->
  <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
    <!--begin::navbar-->
    <div id="kt_app_header" class="app-header d-flex flex-column flex-stack">
      <!--begin::navbar main-->
      <%- include('../layouts/navbar.ejs') %>
      <!--end::navbar main-->
      <!--begin::Separator-->
      <div class="app-header-separator"></div>
      <!--end::Separator-->
    </div>
    <!--end::navbar-->

    <!--begin::Wrapper-->
    <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
      <!--begin::Sidebar-->
      <div id="kt_app_sidebar" class="app-sidebar flex-column" data-kt-drawer="true" data-kt-drawer-name="app-sidebar" data-kt-drawer-activate="{default: true, lg: false}" data-kt-drawer-overlay="true" data-kt-drawer-width="250px" data-kt-drawer-direction="start" data-kt-drawer-toggle="#kt_app_sidebar_mobile_toggle">
        <!--begin::Main-->
        <%- include('../layouts/sidebar.ejs') %>
        <!--end::Main-->
      </div>
      <!--end::Sidebar-->

      <!--begin::Main-->
      <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <!--begin::Content wrapper-->
        <div class="d-flex flex-column flex-column-fluid">
          <!--begin::Toolbar-->
          <div id="kt_app_toolbar" class="app-toolbar pt-5">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
              <!--begin::Toolbar wrapper-->
              <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                  <!--begin::Breadcrumb-->
                  <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                      <a class="text-gray-500">
                        <i class="ki-solid ki-notepad-edit fs-1 text-gray-700 mx-n1"></i>
                      </a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Event</li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold">View All Event</li>
                    <!--end::Item-->
                  </ul>
                  <!--end::Breadcrumb-->
                  <!--begin::Title-->
                  <h1 class="page-heading d-flex flex-column justify-content-center text-dark fw-bolder fs-1 lh-0">Event List</h1>
                  <!--end::Title-->
                </div>
                <!--end::Page title-->
              </div>
              <!--end::Toolbar wrapper-->
            </div>
            <!--end::Toolbar container-->
          </div>
          <!--end::Toolbar-->

          <!--begin::Content-->
          <div id="kt_app_content" class="app-content flex-column-fluid">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container container-fluid">
              <!--begin:: card-->
              <div class="card card-flush border">
                <!--begin::Card header-->
                <div class="card-header border-0 pt-6">
                  <!--begin::Card title-->
                  <div class="card-title mb-5">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                      <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                        <span class="path1"></span>
                        <span class="path2"></span>
                      </i>
                      <input type="text" data-kt-custom-table-filter="search" class="form-control w-250px ps-12" placeholder="Search Service" />
                    </div>
                    <!--end::Search-->
                  </div>
                  <!--begin::Card title-->
                  <!--begin::Card toolbar-->
                  <div class="card-toolbar">
                    <!--begin::Toolbar-->
                    <div class="d-flex justify-content-end" data-kt-subscription-table-toolbar="base">
                      <!--begin::Add service -->
                      <a href="<%= process.env.BASE_URL %>add-event" class="btn btn-primary">
                        <i class="ki-duotone ki-plus fs-2"></i>Add Event</a>
                      <!--end::Add service -->
                    </div>
                    <!--end::Toolbar-->
                  </div>
                  <!--end::Card toolbar-->
                </div>
                <!--end::Card header-->
                <!--begin::Card body-->
                <div class="card-body py-4">

                  <!-- flash message -->
                  <% if(flash.error.length> 0){ %>
                  <!--begin::Alert-->
                  <div class="alert alert-dismissible bg-light-danger d-flex align-items-center mb-10">
                    <!--begin::Content-->
                    <span class="fs-4 text-danger fw-bold text-center ps-5"><%= flash.error %></span>
                    <!--end::Content-->
                    <!--begin::Close-->
                    <button type="button" class="btn btn-icon ms-sm-auto" data-bs-dismiss="alert">
                      <i class="ki-duotone ki-cross fs-1 text-danger fw-bold"><span class="path1"></span><span class="path2"></span></i>
                    </button>
                    <!--end::Close-->
                  </div>
                  <!--end::Alert-->
                  <% } %>
                  <!-- complete flash message -->

                  <!--begin::Table-->
                  <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customers_table">
                    <thead>
                      <tr class="text-start text-gray-400 fw-bold fs-5 text-uppercase gs-0">
                        <th class="min-w-50px">no</th>
                        <th class="min-w-40px">Image</th>
                        <th class="min-w-100px">Name</th>
                        <th class="min-w-100px">Category</th>
                        <th class="min-w-80px">date</th>
                        <th class="min-w-60px">time</th>
                        <th class="min-w-80px">last date</th>
                        <th class="min-w-40px">price</th>
                        <th class="min-w-40px">seat</th>
                        <th class="min-w-40px">booked</th>
                        <th class="min-w-40px">ava.seat</th>
                        <th class="min-w-100px">tag</th>
                        <th class="min-w-40px">status</th>
                        <th class="min-w-40px">Actions</th>
                      </tr>
                    </thead>
                    <tbody class="fw-semibold text-gray-600">
                      <% if (events.length > 0) { %>
                      <% for (let i = 0; i < events.length; i++) { %>
                      <!-- begin::tr -->
                      <tr>
                        <td class="ps-2"><%= i+1 %></td>
                        <td class=" pe-0">
                          <!--begin::Thumbnail-->
                          <a href="<%=  IMAGE_URL + events[i].avatar %>" class="symbol symbol-40px overflow-hidden me-3" data-fslightbox="lightbox-basic">
                            <img src="<%=  IMAGE_URL + events[i].avatar %>" alt="<%= events[i].avatar %>" class="symbol-label border border-gray-300">
                          </a>
                          <!--end::Thumbnail-->
                        </td>
                        <td class="fw-bolder text-gray-800"><%= events[i].event %></td>
                        <td class="fw-bolder"><%= events[i].categoryId.category %></td>
                        <td class="fw-bolder text-warning">
                            <%= new Date(`${events[i].date}`).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric'}) %>
                        </td>
                        <td class="fw-bolder text-dark"><%= events[i].time %></td>
                        <td class="fw-bolder text-danger">
                            <%= new Date(`${events[i].lastdate}`).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric'}) %>
                        </td>
                        <td class="fw-bolder text-info"><%= events[i].price %></td>
                        <td class="fw-bolder text-primary"><%= events[i].totalSeat %></td>
                        <td class="fw-bolder text-success"><%= events[i].totalBookedTicket %></td>
                        <td class="fw-bolder text-danger"><%= events[i].availableticket %></td>
                        <td class="pe-0 fw-bolder">
                          <% if (events[i].tagId && events[i].tagId.length > 0) { %>
                            <% if (events[i].tagId.length > 1) { %>
                              <%= events[i].tagId[0].name %> ...
                            <% } else { %>
                              <%= events[i].tagId[0].name %>
                            <% } %>
                          <% } else { %>
                            No tags 
                          <% } %>
                        </td>
                        <% for(let j in loginData){ %>
                          <% if(String(loginData[j]._id) === String(locals.admin._id)) {%>
                          <% if(loginData[j].is_admin === 1){ %>
                          <td class="pe-0" data-bs-toggle="modal" data-bs-target="#kt_modal_change_status<%= i %>">
                            <% if (events[i].status === "Publish") { %>
                            <div class="badge badge-success">Publish</div>
                            <% } else { %>
                            <div class="badge badge-danger">UnPublish</div>
                            <% } %>
                          </td>
                          <% } else if (loginData[j].is_admin === 0){ %>
                          <td class="pe-0" data-bs-toggle="modal" data-bs-target="#kt_modal_no_access" data-message="You don't have permission to <b>publish/unpublish events</b>. As a <b>demo admin</b>, you can only view the content.">
                            <% if (events[i].status === "Publish") { %>
                            <div class="badge badge-success">Publish</div>
                            <% } else { %>
                            <div class="badge badge-danger">UnPublish</div>
                            <% } %>
                          </td>
                          <% } %>
                          <% } %>
                          <% } %>
                        <td class="pe-0">
                          <div class="d-flex align-items-center">
                            <!-- view -->
                            <a href="<%= process.env.BASE_URL %>event-details?id=<%= events[i]._id%>" title="Event Details" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-dismiss="click" data-bs-placement="top">
                              <div class="symbol symbol-40px symbol-circle user-select-none">
                                <div class="symbol-label bg-light-primary"><i class="ki-solid ki-eye fs-1 text-primary"></i></div>
                              </div>
                            </a>
                            <% for(let j in loginData){ %>
                            <% if(String(loginData[j]._id) === String(locals.admin._id)) {%>
                            <% if(loginData[j].is_admin === 1){ %>
                            <!-- delete -->
                            <a data-bs-toggle="modal" data-bs-target="#kt_modal_delete_events<%= i %>" class="menu-link">
                              <div class="symbol symbol-40px symbol-circle user-select-none">
                                <div class="symbol-label bg-light-danger text-danger"><i class="ki-solid ki-trash fs-2 text-danger"></i></div>
                              </div>
                            </a>
                            <% } else if (loginData[j].is_admin === 0){ %>
                            <!-- delete -->
                            <a data-bs-toggle="modal" data-bs-target="#kt_modal_no_access" data-message="You don't have permission to <b>delete event</b>. As a <b>demo admin</b>, you can only view the content.">
                              <div class="symbol symbol-40px symbol-circle user-select-none">
                                <div class="symbol-label bg-light-danger text-danger"><i class="ki-solid ki-trash fs-2 text-danger"></i></div>
                              </div>
                            </a>
                            <% } %>
                            <% } %>
                            <% } %>
                          </div>
                        </td>
                      </tr>
                      <!-- end::tr -->

                      
                      <!-- begin::Modal - Enable/Disable event -->
                      <div class=" modal fade" id="kt_modal_change_status<%= i %>" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title fs-1" id="confirmLabel">Confirmation</h5>
                              <!--begin::Close-->
                              <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                                <i class="ki-duotone ki-cross fs-2"><span class="path1"></span><span class="path2"></span></i>
                              </div>
                              <!--end::Close-->
                            </div>

                            <!-- begin::modal-body -->
                            <div class="modal-body">
                              <p class="message text-center fs-3 mb-0">
                                Are you sure..!! you want to <%= events[i].status === "Publish" ? 'unpublish' : 'publish' %> the event <b><%= events[i].event %></b> ...?
                              </p>
                            </div>
                            <!-- end::modal-body -->

                            <!-- begin::modal-footer -->
                            <div class="modal-footer">
                              <a href="<%= process.env.BASE_URL %>update-event-status?id=<%= events[i]._id %>">
                                <button type="button" class="btn <%= events[i].status ===  "Publish" ? 'btn-danger' : 'btn-success' %>">
                                  <%= events[i].status === "Publish" ? 'UnPublish' : 'Publish' %>
                                </button>
                              </a>
                            </div>
                            <!-- end::modal-footer -->

                          </div>
                        </div>
                      </div>
                      <!--end::Modal - Enable/Disable event -->

                      <!--begin::Modal - delete events -->
                      <div class="modal fade" id="kt_modal_delete_events<%= i %>" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
                        <!--begin::Modal-->
                        <div class="modal-dialog ">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 Delete class="modal-title fs-1">Delete Confirmation</h5>
                              <!--begin::Close-->
                              <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                                <i class="ki-duotone ki-cross fs-2"><span class="path1"></span><span class="path2"></span></i>
                              </div>
                              <!--end::Close-->
                            </div>
                            <!-- begin::modal-body -->
                            <div class="modal-body">
                              <p class="text-center fs-3 mb-0">Are you sure..!! you want to delete this <b> <%= events[i].event %> </b> event ?</p>
                            </div>
                            <!-- end::modal-body -->
                            <!-- begin::modal-footer -->
                            <div class="modal-footer">
                              <a href="<%= process.env.BASE_URL %>delete-event?id=<%= events[i]._id %>"><button type="button" class="btn btn-danger btn-lg">Delete</button></a>
                            </div>
                            <!-- end::modal-footer -->
                          </div>
                        </div>
                      </div>
                      <!--end::Modal - delete events -->

                      <% } %>
                      <% } else { %>
                      <!-- <p class="text-center fs-4">No intro record available.</p> -->
                      <% } %>
                    </tbody>
                  </table>
                  <!--end::Table-->
                </div>
                <!--end::Card body-->
              </div>
              <!--end::card-->
            </div>
            <!--end::Content container-->
          </div>
          <!--end::Content-->

          <!--begin::Modal - Not Authorized -->
          <div class="modal fade" id="kt_modal_no_access" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
            <!--begin::Modal-->
            <div class="modal-dialog  modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title fs-1">Not Authorized</h5>
                  <!--begin::Close-->
                  <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-2"><span class="path1"></span><span class="path2"></span></i>
                  </div>
                  <!--end::Close-->
                </div>

                <!-- begin::modal-body -->
                <div class="modal-body">
                  <p class="text-center fs-3 mb-0" id="modal-message"></p>
                </div>
                <!-- end:: modal-body -->

                <!-- begin::modal-footer -->
                <div class="modal-footer">
                  <button type="button" class="btn btn-success" data-bs-dismiss="modal">Ok</button>
                </div>
                <!-- end::modal-footer -->

              </div>
            </div>
          </div>
          <!--end::Modal-->

        </div>
        <!--end::Content wrapper-->

        <!--begin::Footer-->
        <div id="kt_app_footer" class="app-footer align-items-center justify-content-center justify-content-md-between flex-column flex-md-row py-3">
          <!--begin::Copyright-->
          <div class="text-dark order-2 order-md-1">
            <span class="text-muted fw-semibold me-1"></span>
            <a  class="text-gray-800 text-hover-primary"></a>
          </div>
          <!--end::Copyright-->
        </div>
        <!--end::Footer-->
      </div>
      <!--end:::Main-->
    </div>
    <!--end::Wrapper-->

  </div>
  <!--end::Page-->
</div>
<!--end::App-->

<!--begin::Scrolltop-->
<div id="kt_scrolltop" class="scrolltop" data-kt-scrolltop="true">
  <i class="ki-duotone ki-arrow-up">
    <span class="path1"></span>
    <span class="path2"></span>
  </i>
</div>
<!--end::Scrolltop-->

<!-- partial:partials/header -->
<%- include('../layouts/footer.ejs') %>