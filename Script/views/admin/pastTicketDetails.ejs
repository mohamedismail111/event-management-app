<!-- partial:partials/header -->
<%- include('../layouts/header.ejs') %>

<!--begin::App-->
<div class="d-flex flex-column flex-root app-root" id="kt_app_root">

  <!--begin::Page-->
  <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
    <!--begin::navbar-->
    <div id="kt_app_header" class="app-header d-flex flex-column flex-stack">
      <!--begin::navbar main-->
      <%- include('../layouts/navbar.ejs') %>
      <!--end::navbar main-->
      <!--begin::Separator-->
      <div class="app-header-separator"></div>
      <!--end::Separator-->
    </div>
    <!--end::navbar-->

    <!--begin::Wrapper-->
    <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
      <!--begin::Sidebar-->
      <div id="kt_app_sidebar" class="app-sidebar flex-column" data-kt-drawer="true" data-kt-drawer-name="app-sidebar" data-kt-drawer-activate="{default: true, lg: false}" data-kt-drawer-overlay="true" data-kt-drawer-width="250px" data-kt-drawer-direction="start" data-kt-drawer-toggle="#kt_app_sidebar_mobile_toggle">
        <!--begin::Main-->
        <%- include('../layouts/sidebar.ejs') %>
        <!--end::Main-->
      </div>
      <!--end::Sidebar-->

      <!--begin::Main-->
      <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <!--begin::Content wrapper-->
        <div class="d-flex flex-column flex-column-fluid">
          <!--begin::Toolbar-->
          <div id="kt_app_toolbar" class="app-toolbar pt-5">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
              <!--begin::Toolbar wrapper-->
              <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                  <!--begin::Breadcrumb-->
                  <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                      <a class="text-gray-500">
                        <i class="ki-solid ki-calendar-tick fs-1 text-gray-700 mx-n1"></i>
                      </a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Ticket</li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-gray-700 fw-bold">
                        <a href="<%= process.env.BASE_URL %>past-ticket" class="text-hover-primary fw-bold text-gray-700">View All Completed Ticket</a>
                    </li>
                    <!--end::Item-->
                     <!--begin::Item-->
                     <li class="breadcrumb-item">
                        <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                      </li>
                      <!--end::Item-->
                      <!--begin::Item-->
                      <li class="breadcrumb-item text-gray-700 fw-bold">Completed Ticket Details</li>
                      <!--end::Item-->
                  </ul>
                  <!--end::Breadcrumb-->
                  <!--begin::Title-->
                  <h1 class="page-heading d-flex flex-column justify-content-center text-dark fw-bolder fs-1 lh-0">Completed Ticket Details</h1>
                  <!--end::Title-->
                </div>
                <!--end::Page title-->
              </div>
              <!--end::Toolbar wrapper-->
            </div>
            <!--end::Toolbar container-->
          </div>
          <!--end::Toolbar-->

          <!--begin::Content-->
          <div id="kt_app_content" class="app-content flex-column-fluid">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container container-fluid">
              <!-- begin :: layout -->
              <div class="d-flex flex-column flex-lg-row">
                <!--begin::Sidebar-->
                <div class="flex-column flex-lg-row-auto w-lg-250px w-xl-450px mb-5 order-1 order-lg-1 me-lg-10">

                  <!--begin::Card-->
                  <div class="card card-flush mb-10" >
                         <!--begin::Card header-->
                         <div class="card-header">
                            <!--begin::Card title-->
                            <div class="card-title">
                                <h2>Ticket Info</h2>
                            </div>
                              <!--end::Card title-->
                          </div>
                          <!--end::Card header-->
                
                        <!--begin::Card body-->
                        <div class="card-body pt-0 fs-6 pb-4">
                          <div class="table-responsive">
                              <!--begin::Table-->
                              <table class="table align-middle table-row-bordered mb-0 fs-6 gy-5 min-w-300px">
                                    <tbody class="fw-semibold text-gray-600">
                                      <tr>
                                        <td class="text-gray-500">Booking Date</td>
                                        <td class="text-gray-800 text-end fw-bolder">
                                          <%= new Date(existingTicket.bookeddate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                        </td>
                                      </tr>
                                      <tr>
                                        <td class="text-gray-500">Ticket Number</td>
                                        <td class="text-gray-800 text-end fw-bolder">
                                          <%= existingTicket.ticket_number %>
                                        </td>
                                      </tr>
                                      <tr>
                                            <td class="text-gray-500">Event Name</td>
                                            <td class="text-gray-800 text-end fw-bolder"><%= existingTicket.eventId.event ? existingTicket.eventId.event : "N/A" %></td>
                                      </tr>
                                      <tr>
                                            <td class="text-gray-500">Event Date</td>
                                            <td class="text-gray-800 text-end fw-bolder"> 
                                                <%=  existingTicket.eventId.date ? new Date(existingTicket.eventId.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : "N/A" %>
                                            </td>
                                      </tr>
                                      <tr>
                                        <td class="text-gray-500">Event Time</td>
                                        <td class="text-gray-800 text-end fw-bolder"> <%= existingTicket.eventId.time ? existingTicket.eventId.time : "N/A" %> </td>
                                      </tr>
                                      <tr>
                                        <td class="text-gray-500">Address</td>
                                        <td class="text-gray-800 text-end fw-bolder"> <%= existingTicket.eventId.address ? existingTicket.eventId.address : "N/A" %> </td>
                                      </tr>
                                      <tr>
                                        <td class="text-gray-500">Price</td>
                                        <td class="text-info text-end fw-bolder"><%= existingTicket.price %></td>
                                      </tr>
                                      <tr>
                                        <td class="text-gray-500">Total Ticket</td>
                                        <td class="text-info text-end fw-bolder"><%= existingTicket.total_ticket %></td>
                                     </tr>
                                     <tr>
                                      <td class="text-gray-500">Subtotal</td>
                                      <td class="text-info text-end fw-bolder"><%= existingTicket.subtotal %></td>
                                     </tr>
                                     <tr>
                                      <td class="text-gray-500">Coupon <%= existingTicket.coupon_code ? '(' + existingTicket.coupon_code + ')' : '' %></td>
                                      <td class="text-primary text-end fw-bolder">  <%= existingTicket.coupon_amount %> </td>
                                     </tr>  
                                      <tr>
                                        <td class="text-gray-500">Tax</td>
                                        <td class="text-primary text-end fw-bolder"><%= existingTicket.tax_amount %> (<%= existingTicket.tax %>)%</td>
                                      </tr>
                                      <tr>
                                            <td class="text-gray-500">Total </td>
                                            <td class="text-success text-end fw-bolder"><%= existingTicket.total_amount %></td>
                                      </tr>
                                      <tr>
                                            <td class="text-gray-500">Status</td>
                                            <td class="text-gray-800 text-end fw-bolder">
                                                <% if (existingTicket.status === "Upcoming") { %>
                                                    <div class="badge badge-primary "><%= existingTicket.status %></div>
                                                <% } else if (existingTicket.status === "Past") { %>
                                                      <div class="badge badge-info"><%= existingTicket.status %></div>
                                                <% } %>
                                            </td>
                                      </tr>
                                    </tbody>
                              </table>
                              <!--end::Table-->
                          </div>     
                        </div>
                        <!--end::Card body-->

                  </div>
                  <!--end::Card-->  

                </div>
                <!--end::Sidebar-->

                <!--begin::Content-->
                <div class="flex-lg-row-fluid  order-2 order-lg-2 mb-10 mb-lg-0">

                  <!-- begin::row -->
                  <div class="row">
                    <!-- begin::col -->
                    <div class="col-xxl-6">
                      <!--begin::Card-->
                      <div class="card card-flush mb-10">
                        <!--begin::Card header-->
                        <div class="card-header">
                          <div class="card-title">
                            <h2>User Info</h2>
                          </div>
                        </div>
                        <!--end::Card header-->
                  
                        <!--begin::Card body-->
                        <div class="card-body pt-0 pb-0">
                          <div class="table-responsive">
                            <!--begin::Table-->
                            <table class="table align-middle table-row-bordered mb-3 fs-6 gy-5 min-w-300px">
                              <tbody class="fw-semibold text-gray-600">
                                  <tr>
                                    <td class="text-gray-500">Name</td>
                                    <td class="text-gray-800 text-end fw-bolder">
                                      <%= existingTicket.userId ? existingTicket.userId.name : "N/A" %>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="text-gray-500">Email</td>
                                    <td class="text-gray-800 text-end fw-bolder">
                                      <%= existingTicket.userId ? existingTicket.userId.email : "N/A" %>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="text-gray-500">Phone Number</td>
                                    <td class="text-gray-800 text-end fw-bolder"> 
                                      <% if (existingTicket.userId) { %>
                                        +<%= existingTicket.userId.country_code %> <%= existingTicket.userId.phone %>
                                      <% } else { %>
                                        N/A
                                      <% } %>
                                      
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="text-gray-500">Date Of Birth</td>
                                    <td class="text-gray-800 text-end fw-bolder">
                                      <% if (existingTicket.userId) { %>
                                        <%= new Date(`${existingTicket.userId.birthdate}`).toLocaleDateString('en-US', { year: 'numeric' ,
                                          month: 'long' , day: 'numeric' }) %>
                                      <% } else { %>
                                        N/A
                                      <% } %>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="text-gray-500">Gender</td>
                                    <td class="text-gray-800 text-end fw-bolder">
                                      <%= existingTicket.userId ? existingTicket.userId.gender : "N/A" %>
                                    </td>
                                  </tr>
                              </tbody>
                            </table>
                            <!--end::Table-->
                          </div>
                  
                        </div>
                        <!--end::Card body-->
                      </div>
                      <!--end::Card-->
                    </div>
                    <!-- end::col -->
                  
                    <!-- begin::col -->
                    <div class="col-xxl-6">
                      <!--begin::Card-->
                      <div class="card card-flush mb-10">
                        <!--begin::Card header-->
                        <div class="card-header">
                          <div class="card-title">
                            <h2>Ticket scan/cancel Info</h2>
                          </div>
                        </div>
                        <!--end::Card header-->
                  
                        <!--begin::Card body-->
                        <div class="card-body pt-0 pb-0">
                          <div class="table-responsive">
                            <!--begin::Table-->
                            <table class="table align-middle table-row-bordered mb-3 fs-6 gy-5 min-w-300px">
                              <tbody class="fw-semibold text-gray-600">
                                <tr>
                                  <td class="text-gray-500">Total ticket</td>
                                  <td class="text-primary text-end fw-bolder">
                                    <%= existingTicket.total_ticket %>
                                  </td>
                                </tr>
                                <tr>
                                  <td class="text-gray-500">Total cancelled ticket</td>
                                  <td class="text-danger text-end fw-bolder">
                                    <%= existingTicket.total_cancelled_ticket %>
                                  </td>
                                </tr>
                                <tr>
                                  <td class="text-gray-500">Total remaining ticket</td>
                                  <td class="text-info text-end fw-bolder">
                                    <%= existingTicket.total_remaining_ticket %>
                                  </td>
                                </tr>
                                <tr>
                                  <td class="text-gray-500">Total scanned ticket</td>
                                  <td class="text-success text-end fw-bolder">
                                    <%= existingTicket.total_scanned_tickets %>
                                  </td>
                                  </td>
                                </tr>
                                <tr>
                                  <td class="text-gray-500">Total remaining tickets to scan</td>
                                  <td class="text-danger text-end fw-bolder">
                                    <%= existingTicket.total_remaining_tickets_to_scan %>
                                  </td>
                                </tr>
                              </tbody>
                            </table>
                            <!--end::Table-->
                          </div>
                  
                        </div>
                        <!--end::Card body-->
                      </div>
                      <!--end::Card-->
                    </div>
                    <!-- end::col -->
                  
                  </div>
                  <!-- end:: row -->
   
                  <!-- begin::col -->
                  <div class="row">
                    <!-- begin::card - payment status -->
                    <div class="card card-flush col-xxl-6">
                  
                      <!--begin::Card header-->
                      <div class="card-header">
                        <div class="card-title">
                          <h2>Payment Info</h2>
                        </div>
                      </div>
                      <!--end::Card header-->
                  
                      <!--begin::Card body-->
                      <div class="card-body pt-0">
                        <div class="table-responsive">
                          <!--begin::Table-->
                          <table class="table align-middle table-row-bordered mb-0 fs-6 gy-5 min-w-300px">
                            <tbody class="fw-semibold text-gray-600">
                              <tr>
                                <td class="text-gray-500">Payment Method</td>
                                <td class="text-gray-800 text-end fw-bolder">
                                  <%= existingTicket.payment_method %>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-500">Payment Status</td>
                                <td class="text-gray-800 text-end">
                                  <% if ( existingTicket.payment_status==="Successful" ) { %>
                                    <div class="badge badge-success">
                                      <%= existingTicket.payment_status %>
                                    </div>
                                  <% } else if ( existingTicket.payment_status==="Failed" ) { %>
                                      <div class="badge badge-danger">
                                        <%= existingTicket.payment_status %>
                                      </div>
                                  <% } else { %>
                                        <div class="badge badge-warning ">
                                          <%= existingTicket.payment_status %>
                                        </div>
                                  <% } %>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-500">Transaction Id</td>
                                <td class="text-gray-800 text-end fw-bolder">
                                  <%= existingTicket.transaction_id ? existingTicket.transaction_id : "N/A" %>
                                </td>
                              </tr>
                            </tbody>
                          </table>
                          <!--end::Table-->
                        </div>
                  
                      </div>
                      <!--end::Card body-->
                  
                    </div>
                    <!-- end::card - payment status -->
                  </div>
                  <!-- end::col -->
        
                </div>  
                <!--end::Content-->

              </div>
              <!-- end :: layout -->

              <!-- begin::cancellation info -->
              <div class="card card-flush mb-10">
                <!--begin::Card header-->
                <div class="card-header">
                 <!--begin::Card title-->
                 <div class="card-title">
                   <h1 class="fw-bolder">Cancellation Info</h2>
                 </div>
                 <!--begin::Card title-->
               </div>
               <!--end::Card header-->
         
             <!--begin::Card body-->
             <div class="card-body pt-0">
               <!--begin::Table-->
               <div id="kt_table_widget_5_table_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                 <div class="table-responsive">
                   <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                     <!--begin::Table head-->
                     <thead>
                       <!--begin::Table row-->
                       <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                         <th class="min-w-50px">no</th>
                         <th class="min-w-100px">Date</th>
                         <th class="min-w-100px">Ticket</th>
                         <th class="min-w-100px">reason</th>
                         <th class="min-w-100px">refund amount</th>
                         <th class="min-w-100px">notes</th>
                       </tr>
                       <!--end::Table row-->
                     </thead>
                     <!--end::Table head-->

                     <!--begin::Table body-->
                     <tbody class="fw-bold text-gray-600">
                       
                       <% if (existingTicket.cancellation_info && existingTicket.cancellation_info.length > 0) { %>
                         <% existingTicket.cancellation_info.forEach((item, index) => { %>
                           <tr> <!-- Start table row -->
                             <td class="fw-bolder">
                               <%= index + 1 %>
                             </td>
                             <td class="fw-bolder text-gray-800">
                               <%= new Date(`${item.cancel_date}`).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                             </td>
                             <td class="fw-bolder text-gray-800">
                               <%= item.total_cancel_ticket %>
                             </td>
                             <td class="fw-bolder">
                               <%= item.cancel_reason %>
                             </td>
                             <td class="fw-bolder">
                               <%= item.refund_amount ? item.refund_amount : 0 %>
                             </td>
                             <td class="fw-bolder">
                               <%= item.refund_notes ? item.refund_notes:"N/A" %>
                             </td>
                           </tr> <!-- End table row -->

                         <% }); %>
                         <% } else { %>
                         <tr>
                           <td colspan="5" class="text-center">No cancellation records available.</td>
                         </tr>
                         <% } %>
                     </tbody>
                     <!--end::Table body-->

                   </table>
                 </div>
               </div>
               <!--end::Table-->
             </div>
             <!--end::Card body-->
             </div>
             <!-- end::cancellation info -->

              <!-- begin::back button -->
              <a href="<%= process.env.BASE_URL %>past-ticket"><button type="button" class="btn btn-primary">Back</button></a>
              <!-- end::back button -->

            </div>
            <!--end::Content container-->
          </div>
          <!--end::Content-->

          <!--begin::Modal - Not Authorized -->
          <div class="modal fade" id="kt_modal_no_access" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
            <!--begin::Modal-->
            <div class="modal-dialog  modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title fs-1">Not Authorized</h5>
                  <!--begin::Close-->
                  <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-2"><span class="path1"></span><span class="path2"></span></i>
                  </div>
                  <!--end::Close-->
                </div>

                <!-- begin::modal-body -->
                <div class="modal-body">
                  <p class="text-center fs-3 mb-0" id="modal-message"></p>
                </div>
                <!-- end:: modal-body -->

                <!-- begin::modal-footer -->
                <div class="modal-footer">
                  <button type="button" class="btn btn-success" data-bs-dismiss="modal">Ok</button>
                </div>
                <!-- end::modal-footer -->

              </div>
            </div>
          </div>
          <!--end::Modal-->

        </div>
        <!--end::Content wrapper-->

        <!--begin::Footer-->
        <div id="kt_app_footer" class="app-footer align-items-center justify-content-center justify-content-md-between flex-column flex-md-row py-3">
          <!--begin::Copyright-->
          <div class="text-dark order-2 order-md-1">
            <span class="text-muted fw-semibold me-1"></span>
            <a  class="text-gray-800 text-hover-primary"></a>
          </div>
          <!--end::Copyright-->
        </div>
        <!--end::Footer-->
      </div>
      <!--end:::Main-->
    </div>
    <!--end::Wrapper-->

  </div>
  <!--end::Page-->
</div>
<!--end::App-->

<!--begin::Scrolltop-->
<div id="kt_scrolltop" class="scrolltop" data-kt-scrolltop="true">
  <i class="ki-duotone ki-arrow-up">
    <span class="path1"></span>
    <span class="path2"></span>
  </i>
</div>
<!--end::Scrolltop-->

<!-- partial:partials/header -->
<%- include('../layouts/footer.ejs') %>

